files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/nodejs.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/log/nodejs/nodejs.log

commands:
  01_create_nodejs_log:
    command: "mkdir -p /var/log/nodejs && touch /var/log/nodejs/nodejs.log && chown -R nodejs:nodejs /var/log/nodejs"
